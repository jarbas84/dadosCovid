<!DOCTYPE html>
<html>
  <head>
    <title>Covid</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= link_to "Home", root_path, class:'navbar-brand mr-5' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item mr-5">
              <%= link_to "Confirmados", confirmados_path, class:'navbar-link' %>
            </li>
            <li class="nav-item mr-5">
              <%= link_to "Recuperados", recuperados_path, class:'navbar-link' %>
            </li>
            <li class="nav-item mr-5">
              <%= link_to "Mortos", mortos_path, class:'navbar-link' %>
            </li>
            <li class="nav-item mr-5">
              <%= link_to "Por Dia", por_dia_path, class:'navbar-link' %>
            </li>
          </ul>
        </div>
    </nav>
    
    <%= yield %>
  </body>
</html>
