<table class="table table-striped">
	<caption>Confirmados</caption>
  <thead>
    <tr class="text-center">
      <th scope="col">País</th>
      <th scope="col">Cidade</th>
      <th scope="col">Confirmados</th>
      <th scope="col">Última Atualização</th>
    </tr>
  </thead>
  <tbody>
  	<% @confirmed.each do |c| %>
	    <tr class="text-center">
			 <td><%= c['countryRegion'] %></td>
			 <td><%= c['provinceState'] %></td>
			 <td><%= c['confirmed'] %></td>
			 <td><%= link_to Time.at(c['lastUpdate'].to_i/1000).strftime('%d/%m/%Y %H:%M:%S'), "por-data/#{(Time.at(c['lastUpdate'].to_i/1000).strftime('%d-%m-%Y'))}" %></td>
		</tr>
	<% end %>
  </tbody>
</table>
