<table class="table table-striped">
  <caption>Países</caption>
  <thead>
    <tr class="ml-5">
      <th scope="col">Países</th>
      <th scope="col">ISO2</th>
      <th scope="col">ISO3</th>
    </tr>
  </thead>
  <tbody>
    <% @countries['countries'].each do |c| %>
      <tr class="ml-5">
        <td><%= c['name'] %></td>
        <td><%= c['iso2'] %></td>
        <td><%= c['iso3'] %></td>
    </tr>
  <% end %>
  </tbody>
</table>